generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Enemy {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  powerGrade PowerGrade
  type       Type
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  todos     Todo[]
}

model Todo {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  isCompleted Boolean  @default(false)
  authorId    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User?    @relation(fields: [authorId], references: [id])
}

enum PowerGrade {
  FOURTH
  THIRD
  SECOND
  FIRST
  SPECIAL
}

enum Type {
  COMMON
  BOSS
}

enum Role {
  USER
  MEMBER
  ADMIN
}
